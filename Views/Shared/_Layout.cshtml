    <!-- Main JS File -->

    <style>
        .fixed-menu {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #fff; /* Màu nền của menu */
            z-index: 1000; /* Đảm bảo menu hiển thị trên các phần khác */
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Đổ bóng cho menu (tuỳ chọn) */
            border-bottom: 2px solid #ccc; /* Đường viền dưới với màu sắc và độ dày tuỳ chọn */
        }

        .header-main {
            /* Điều chỉnh padding của phần header để tránh che phủ nội dung khi menu cố định */
            padding-top: 20px; /* Tùy chỉnh giá trị này theo độ cao của menu */
        }
    </style>


</head>
<body>
    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container-fluid fixed-menu">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-2 col-md-6">
