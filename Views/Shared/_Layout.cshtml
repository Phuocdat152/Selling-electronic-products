                                        </div>
                                        <small class="text">Trang admin</small>
                                    </a>
                                </div>

                                <div class="widget-header">
                                    <a href="~/Home/Logout" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-sign-out-alt"></i>
                                            <span class="" id=""></span>
                                        </div>
                                        <small class="text">Đăng Xuất </small>
                                    </a>
                                </div> }
                            else
